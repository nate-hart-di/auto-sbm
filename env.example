# SBM Tool V2 Environment Configuration

# DealerInspire Platform Directory
# Path to your local DI Websites Platform repository
DI_PLATFORM_DIR=/Users/nathanhart/external-sync-repo

# Context7 MCP Server Configuration
# Context7 server URL for SCSS processing
CONTEXT7_SERVER_URL=http://localhost:3001
CONTEXT7_API_KEY=your_context7_api_key_here
CONTEXT7_TIMEOUT=30

# Git Configuration
# Default Git settings for automated operations
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@dealerinspire.com
GIT_DEFAULT_BRANCH=main

# GitHub Configuration (for PR creation)
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=carsdotcom
GITHUB_REPO=di-websites-platform

# SBM Tool Settings
# Default settings for migration operations
SBM_DEFAULT_REVIEWERS=reviewer1,reviewer2
SBM_DEFAULT_LABELS=sbm,migration,auto-generated
SBM_FORCE_RESET=false
SBM_SKIP_VALIDATION=false

# Demo Mode Settings
# Special settings for live demonstrations
DEMO_MODE=false
DEMO_TIMEOUT=300
DEMO_SKIP_GIT=false
DEMO_SKIP_STARTUP=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=sbm.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Stellantis-Specific Settings
# Enhanced settings for Stellantis dealer processing
STELLANTIS_ENHANCED_MODE=true
STELLANTIS_BRAND_DETECTION=auto
STELLANTIS_MAP_PROCESSING=true

# Development Settings
# Settings for development and testing
DEV_MODE=false
SKIP_CONTEXT7=false
MOCK_GIT_OPERATIONS=false
VERBOSE_OUTPUT=false 
